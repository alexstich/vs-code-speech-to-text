{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "skipLibCheck": true,
    "types": ["mocha", "node", "vscode", "sinon"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
} 